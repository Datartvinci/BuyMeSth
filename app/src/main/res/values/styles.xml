<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/meow</item>
    </style>

    <style name="AppTheme.SwipeBackLayout" parent="AppTheme.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>


    </style>

    <style name="tweetName">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>
    <style name="commentName">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="commentDate">
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="commentText">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="theTitleLarge">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="theTitleNormal">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="theTitleSmall">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="theName">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="theDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

    <style name="theText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>
    <style name="theTextSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>

    <style name="theLevelWhite">
        <item name="android:textSize">8sp</item>
        <item name="android:textColorLink">#ffffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
    </style>

</resources>
