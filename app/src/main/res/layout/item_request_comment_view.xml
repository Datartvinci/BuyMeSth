<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="14dp"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_alignParentStart="true"
            android:src="@mipmap/def_head"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_icon"
            style="@style/commentName"
            android:text="Miracle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_icon"
            style="@style/commentDate"
            android:layout_marginTop="@dimen/dp_6"
            android:text="2016-08-24 00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_comment_like"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ic_favorite"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_below="@+id/tv_comment_date"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_toLeftOf="@+id/iv_comment_like"
            style="@style/commentText"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_14"
            android:text="2016-08-24 00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>