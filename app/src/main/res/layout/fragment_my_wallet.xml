<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@mipmap/def_head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/iv_avatar"
        android:layout_height="80dp"
        android:layout_width="80dp" />

    <TextView
        android:text="我的钱包里面有"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/iv_avatar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="10086 B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cash"
        android:textSize="38sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_refresh_grey600_48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/selectable_item_background"
        android:clickable="true" />

    <Button
        android:id="@+id/bt_recharge"
        android:text="充值"
        android:textColor="@color/white"
        android:background="@drawable/rect_accent"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_cash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/bt_withdraw"
        android:text="提现"
        android:background="@drawable/rect_grey"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_recharge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/bt_transfer"
        android:text="转账"
        android:background="@drawable/rect_grey"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_withdraw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
        android:id="@+id/ly_app_select"
        android:orientation="vertical"
        android:alpha="0.8"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="支付宝"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_alipay"
            android:foreground="@drawable/selectable_item_background"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:text="微信"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_weixin"
            android:foreground="@drawable/selectable_item_background"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:text="模拟"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_simulate"
            android:foreground="@drawable/selectable_item_background"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:text="取消"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_cancel"
            android:foreground="@drawable/selectable_item_background"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>