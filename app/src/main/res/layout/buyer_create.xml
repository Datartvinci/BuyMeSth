<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_comment"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingStart="14dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/chat_icon"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:src="@mipmap/def_head" />

                <TextView
                    android:id="@+id/tv_chat_name"
                    style="@style/commentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/chat_icon"
                    android:text="Miracle" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_chat_name"
                    android:layout_toRightOf="@+id/chat_icon"
                    android:autoText="true"
                    android:background="#525252"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="LV 2"
                    android:textColor="#ffffff"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_main_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_marginTop="10dp"
                android:src="@mipmap/default_img_rect"
                android:layout_below="@+id/person_info" />

            <TextView
                android:id="@+id/tv_chat_time"
                style="@style/commentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_main_pic"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:text="用户于2016-08-24 00:00接收了你的订单" />

            <edu.scau.buymesth.publish.FlowLayout
                android:id="@+id/chat_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_chat_time"
                android:layout_margin="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">

            </edu.scau.buymesth.publish.FlowLayout>

            <TextView
                android:id="@+id/thing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物品价格：￥"
                android:layout_below="@+id/chat_tag" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thing_price"
                android:text="索要小费：￥" />

            <Button
                android:id="@+id/btn_chat_cancle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/btn_chat_ok"
                android:background="@drawable/btn_chat_cancle"
                android:text="残忍拒绝"
                android:layout_below="@+id/tv_tip" />

            <Button
                android:id="@+id/btn_chat_ok"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_chat_ok"
                android:text="接收订单"
                android:textColor="#ffffff"
                android:layout_below="@+id/tv_tip" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>