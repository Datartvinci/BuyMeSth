<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorLightLightGrey">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/background_user_info"
                android:id="@+id/rv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_toEndOf="@+id/iv_icon"
                    android:layout_alignStart="@+id/tv_name" />



                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/def_head"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"

                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_alignTop="@+id/iv_icon"
                    android:layout_toEndOf="@+id/iv_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_2"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/rv_1"
                android:layout_width="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/white"
                android:clickable="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_refresh_grey600_48dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="30dp"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@+id/tv_cash_title"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/tv_cash_title"/>
                <TextView
                    android:id="@+id/tv_cash_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text="我的钱包里面有: "
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_cash_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="点击查看消费记录"
                    android:layout_marginBottom="12dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_cash_title"
                    android:layout_alignStart="@+id/tv_cash_title" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_divider"
                android:layout_below="@+id/rv_2"
                android:text="充值和提现"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/rv_3"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:layout_below="@+id/tv_divider"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_alipay"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用支付宝"/>

                            <TextView
                                style="@style/theTextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂不支持"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_weixin"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用微信    "/>

                            <TextView
                                style="@style/theTextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂不支持"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_wangyin"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用网银    "/>

                            <TextView
                                style="@style/theTextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂不支持"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ly_btn_deposit_withdraw"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/ic_launcher"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="模拟充值提现"/>

                            <TextView
                                style="@style/theTextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="测试阶段使用"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>